@model CellularAutomaton.Domain.User
@{
    
    ViewBag.Title ="";
}
@if(Model!=null)
{
    <h2>Галерея пользователя @Model.UserName</h2>
    <div class="container">
        <div class="bg-primary col-md-6 col-md-offset-3">
            <div id="userAutomatons">
                <ul class="nav nav-pills nav-stacked">
                    @{ Html.RenderPartial("_ShowUserAutomatonsPartial",Model.Automatons); }
                </ul>
            </div>
            <span id="оnlineUsers">
                <input id="username" type="hidden" />
            </span>
        </div>
    </div>
}
else
{
    <div class="alert alert-warning"> Пользователь был удален.</div>
}



