@model CellularAutomaton.Domain.Tag

@{
    ViewBag.Title = "Галерея";
}

<h2>Галерея</h2>
<div class="container">
    <div class=" col-md-6 col-md-offset-3">
        <div class="navbar ">
            @using (Html.BeginForm("Search", "Automaton", FormMethod.Post, new { @class = "navbar-left navbar-form" }))
            {
                <div class="form-group">
                    <input id="criteria" name="criteria" class="form-control" placeholder="Search" value="@Model.Name">
                </div>
                <button type="submit" class="btn btn-default">Submit</button>
            }
        </div>
        <div id="automatons">
            <ul class="nav nav-pills nav-stacked">
                @{ Html.RenderPartial("_JustAddedPartial", Model.Automatons.GroupBy(a=>a.Rules)); }
            </ul>
        </div>
    </div>
</div>

